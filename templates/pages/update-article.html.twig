{% extends 'base.html.twig' %}
{% block title %} Write! {% endblock %}
{% block content %}
    <!-- Main -->
    <div id="main">
        <div class="inner">
            <h1>Form</h1>

            <!-- Form -->
            <section>
                <h2>Form</h2>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <br>
                <ul class="actions">
                    <li><input type="submit" value="Send Message" class="primary" /></li>
                    <li><input type="reset" value="Reset" /></li>
                </ul>
                {{ form_end(form) }}
            </section>
        </div>
    </div>
{% endblock %}